<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_upcoming_movie"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="20dp"
    app:cardCornerRadius="24dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardview_poster_shimmer_layout"
        android:layout_width="158dp"
        android:layout_height="223dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/iv_poster_movie"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/md_theme_secondary" />
    </com.google.android.material.card.MaterialCardView>

    <View
        android:id="@+id/tv_title_movie_shimmer_layout"
        android:layout_width="158dp"
        android:layout_height="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="14dp"
        android:background="@color/md_theme_secondary"
        app:layout_constraintTop_toBottomOf="@id/cardview_poster_shimmer_layout" />

    <View
        android:id="@+id/iv_genre_shimmer_layout"
        android:layout_width="14dp"
        android:layout_height="15dp"
        android:layout_marginTop="8dp"
        android:background="@color/md_theme_secondary"
        app:layout_constraintStart_toStartOf="@id/tv_title_movie_shimmer_layout"
        app:layout_constraintTop_toBottomOf="@id/tv_title_movie_shimmer_layout" />

    <View
        android:id="@+id/tv_genre_shimmer_layout"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginStart="4dp"
        android:background="@color/md_theme_secondary"
        app:layout_constraintBottom_toBottomOf="@id/iv_genre_shimmer_layout"
        app:layout_constraintEnd_toEndOf="@id/tv_title_movie_shimmer_layout"
        app:layout_constraintStart_toEndOf="@id/iv_genre_shimmer_layout"
        app:layout_constraintTop_toTopOf="@id/iv_genre_shimmer_layout" />

    <View
        android:id="@+id/iv_release_movie_shimmer_layout"
        android:layout_width="14dp"
        android:layout_height="15dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="5dp"
        android:background="@color/md_theme_secondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/iv_genre_shimmer_layout"
        app:layout_constraintTop_toBottomOf="@id/iv_genre_shimmer_layout" />

    <View
        android:id="@+id/tv_release_movie_shimmer_layout"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginStart="4dp"
        android:background="@color/md_theme_secondary"
        app:layout_constraintBottom_toBottomOf="@id/iv_release_movie_shimmer_layout"
        app:layout_constraintEnd_toEndOf="@id/tv_genre_shimmer_layout"
        app:layout_constraintStart_toEndOf="@id/iv_release_movie_shimmer_layout"
        app:layout_constraintTop_toTopOf="@id/iv_release_movie_shimmer_layout" />
</androidx.constraintlayout.widget.ConstraintLayout>