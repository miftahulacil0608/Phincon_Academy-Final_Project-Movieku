<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_poster_shimmer"
        android:layout_width="158dp"
        android:layout_height="223dp"
        android:layout_marginEnd="35dp"
        android:background="@color/md_theme_secondary"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toStartOf="@+id/iv_poster_shimmer2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/RoundedSquare2" />

    <View
        android:id="@+id/tv_title_movie_shimmer"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:background="@color/md_theme_secondary"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@id/iv_poster_shimmer"
        android:layout_marginBottom="8dp"
        app:layout_constraintStart_toStartOf="@id/iv_poster_shimmer"
        app:layout_constraintTop_toBottomOf="@id/iv_poster_shimmer"
         />
    <View
        android:id="@+id/genre_movie_shimmer"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:background="@color/md_theme_secondary"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@id/tv_title_movie_shimmer"
        android:layout_marginBottom="8dp"
        app:layout_constraintStart_toStartOf="@id/tv_title_movie_shimmer"
        app:layout_constraintTop_toBottomOf="@id/tv_title_movie_shimmer"
        />
    <View
        android:id="@+id/release_or_rating_movie_shimmer"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:background="@color/md_theme_secondary"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/genre_movie_shimmer"
        android:layout_marginBottom="8dp"
        app:layout_constraintStart_toStartOf="@id/genre_movie_shimmer"
        app:layout_constraintTop_toBottomOf="@id/genre_movie_shimmer"
        />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_poster_shimmer2"
        android:layout_width="158dp"
        android:layout_height="223dp"
        android:background="@color/md_theme_secondary"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toEndOf="@id/iv_poster_shimmer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/RoundedSquare2" />

    <View
        android:id="@+id/tv_title_movie_shimmer2"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:background="@color/md_theme_secondary"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@id/iv_poster_shimmer2"
        android:layout_marginBottom="8dp"
        app:layout_constraintStart_toStartOf="@id/iv_poster_shimmer2"
        app:layout_constraintTop_toBottomOf="@id/iv_poster_shimmer2"
        />
    <View
        android:id="@+id/genre_movie_shimmer2"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:background="@color/md_theme_secondary"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@id/tv_title_movie_shimmer2"
        android:layout_marginBottom="8dp"
        app:layout_constraintStart_toStartOf="@id/tv_title_movie_shimmer2"
        app:layout_constraintTop_toBottomOf="@id/tv_title_movie_shimmer2"
        />
    <View
        android:id="@+id/release_or_rating_movie_shimmer2"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:background="@color/md_theme_secondary"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/genre_movie_shimmer2"
        android:layout_marginBottom="8dp"
        app:layout_constraintStart_toStartOf="@id/genre_movie_shimmer2"
        app:layout_constraintTop_toBottomOf="@id/genre_movie_shimmer2"
        />


</androidx.constraintlayout.widget.ConstraintLayout>